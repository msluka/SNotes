@using System.Web.Mvc.Html
@using Microsoft.AspNet.Identity
@model SNotes.ViewModels.AddNoteViewModel
@*@{
        ViewBag.Title = "Create";
    }*@

<div class="row">
    <div class="col-md-3">

        @{Html.RenderAction("LabelList", "Label"); }

    </div>

    <div class="col-md-8">
        <div style="width: 85%">
            @{
                Html.RenderPartial("_noteMenuPartial");
            }


            @using (Html.BeginForm("Create", "Note"))
            {
                @*<div class="form-group">
                        @Html.TextAreaFor(m => m.Title, new {@class = "form-control"})

                        @Html.LabelFor(m => m.Content)

                        @Html.TextAreaFor(m => m.Content, new {@class = "form-control"})

                    </div>*@


                <div class="form-group">
                    <div class="noteBox" id="noteBoxInCreateOrEditView">
                        
                        <div class="editableDivs" id="editableDivsInAddOrEditNoteView">
                            @Html.TextArea("title", @Model.Title, new {@class = "form-control", @placeholder = "Title"})
                            @Html.TextArea("content", @Model.Content, new {@class = "form-control", @placeholder = "Text ..."})
                        </div>

                        <div class="noteFooter" id="noteFooterInCreateOrEditView" style="min-width: 100%; background: red; display: inline-block; position: absolute; bottom: 0;">
                            <button type="submit" id="saveNote">SAVE</button>
                            <a id="cancelCreateOrEditNote" href="@Url.Action("NoteList", "Note", null, null)">CANCEL</a>
                        </div>

                    </div>
                </div>

                @*<button type="submit" class="btn btn-default">Save</button>*@
            }
        </div>
    </div>

    <div class="col-md-1">
    </div>
</div>




